{
  "name": "@stoked-automations/browser-testing-suite",
  "version": "1.0.0",
  "description": "MCP servers for Playwright automation and Chrome DevTools Protocol",
  "type": "module",
  "main": "dist/servers/playwright-automation.js",
  "scripts": {
    "dev:playwright": "tsx watch servers/playwright-automation.ts",
    "dev:devtools": "tsx watch servers/chrome-devtools.ts",
    "build": "tsc",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:e2e": "playwright test",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "claude-code",
    "mcp",
    "playwright",
    "chrome-devtools",
    "cdp",
    "browser-testing",
    "e2e",
    "automation"
  ],
  "author": "Andrew Nixdorf",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.7.0",
    "playwright": "^1.48.0",
    "chrome-remote-interface": "^0.33.2",
    "puppeteer-core": "^23.10.1",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.19.21",
    "eslint": "^9.0.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  }
}
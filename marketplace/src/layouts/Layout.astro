---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A curated marketplace of high-quality Claude Code plugins" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

  </head>
  <body class="min-h-screen bg-black text-gray-100">
    <!-- Navigation -->
    <nav class="border-b border-gray-800 bg-black sticky top-0 z-50">
      <div class="container mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center gap-3 group">
            <div class="w-8 h-8 bg-blue-600 flex items-center justify-center text-white font-bold text-sm">
              CC
            </div>
            <div>
              <h1 class="text-lg font-semibold text-white tracking-tight">CLAUDE CODE PLUGINS</h1>
            </div>
          </a>

          <div class="flex items-center gap-8 text-sm">
            <a href="/#plugins" class="text-gray-400 hover:text-blue-500 transition-colors">PLUGINS</a>
            <a href="/#categories" class="text-gray-400 hover:text-blue-500 transition-colors">CATEGORIES</a>
            <a href="https://github.com/jeremylongshore/claude-code-plugins" target="_blank" class="text-gray-400 hover:text-blue-500 transition-colors">
              GITHUB
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-800 bg-black mt-20">
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-sm">
          <div>
            <h3 class="text-white font-semibold mb-3 tracking-tight">CLAUDE CODE PLUGINS</h3>
            <p class="text-gray-500">A curated marketplace of production-ready plugins for Claude Code.</p>
          </div>
          <div>
            <h3 class="text-white font-semibold mb-3 tracking-tight">LINKS</h3>
            <ul class="space-y-2">
              <li><a href="https://docs.claude.com/en/docs/claude-code" class="text-gray-500 hover:text-blue-500 transition-colors">Documentation</a></li>
              <li><a href="https://github.com/jeremylongshore/claude-code-plugins" class="text-gray-500 hover:text-blue-500 transition-colors">GitHub</a></li>
              <li><a href="https://discord.com/invite/6PPFFzqPDZ" class="text-gray-500 hover:text-blue-500 transition-colors">Discord</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-white font-semibold mb-3 tracking-tight">COMMUNITY</h3>
            <p class="text-gray-500">Built by the Claude Code community.</p>
            <p class="text-gray-500 mt-2">Contribute your plugins!</p>
          </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-600 text-xs">
          <p>&copy; 2025 CLAUDE CODE PLUGINS. OPEN SOURCE UNDER MIT LICENSE.</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  body {
    font-family: 'IBM Plex Mono', monospace;
  }
</style>

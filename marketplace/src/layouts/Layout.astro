<style>
  /* Site Header */
  .site-header {
    background: var(--card-dark);
    border-bottom: 1px solid var(--card-medium);
    position: sticky;
    top: 0;
    z-index: 1000;
    backdrop-filter: blur(10px);
    background: rgba(45, 31, 15, 0.95);
  }

  .nav-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .brand-icon {
    width: 2rem;
    height: 2rem;
    color: var(--orange-500);
  }

  .brand-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--bg-primary);
    font-family: var(--font-mono);
  }

  .brand-badge {
    padding: 0.25rem 0.5rem;
    background: var(--card-medium);
    color: var(--text-light);
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-family: var(--font-mono);
    font-weight: 600;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    color: var(--text-light);
    font-weight: 500;
    font-size: 0.875rem;
    transition: color var(--transition-fast);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-link:hover {
    color: var(--orange-400);
  }

  .nav-divider {
    display: none;
  }

  .nav-section-label {
    display: none;
  }

  .github-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Site Footer */
  .site-footer {
    background: var(--card-dark);
    border-top: 1px solid var(--card-medium);
    margin-top: 6rem;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 3rem 1rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--bg-primary);
    margin: 0;
    background: linear-gradient(135deg, var(--orange-600), var(--orange-400));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-description {
    color: var(--text-light);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .footer-heading {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--bg-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links a {
    color: var(--text-muted);
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--orange-400);
  }

  .footer-bottom {
    border-top: 1px solid var(--card-medium);
    padding: 1.5rem 0;
  }

  .footer-bottom .footer-container {
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .footer-copyright p {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .footer-built {
    color: var(--text-light);
    font-size: 0.75rem;
  }

  .footer-brand-link {
    color: var(--orange-400);
    text-decoration: none;
    border-bottom: 1px solid rgba(233, 113, 1, 0.3);
    transition: all var(--transition-fast);
  }

  .footer-brand-link:hover {
    color: var(--orange-300);
    border-bottom-color: var(--orange-300);
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    width: 2.5rem;
    height: 2.5rem;
    background: var(--card-medium);
    border: 1px solid var(--card-light);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-light);
    transition: all var(--transition-base);
  }

  .social-link:hover {
    background: var(--card-light);
    border-color: var(--orange-600);
    color: var(--orange-400);
    transform: translateY(-2px);
  }

  .social-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Mobile Menu Toggle */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: var(--text-light);
    cursor: pointer;
    padding: 0.5rem;
    margin-left: auto;
  }

  .mobile-menu-toggle svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .mobile-menu-toggle .close-icon {
    display: none;
  }

  .mobile-menu-toggle.active .menu-icon {
    display: none;
  }

  .mobile-menu-toggle.active .close-icon {
    display: block;
  }

  /* Prevent body scroll when mobile menu is open */
  body.menu-open {
    overflow: hidden;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav-container {
      flex-wrap: nowrap;
    }

    .nav-brand {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .mobile-menu-toggle {
      display: block;
    }

    .nav-links {
      position: fixed;
      top: 0;
      right: -100%;
      width: 80%;
      max-width: 300px;
      height: 100vh;
      background: var(--card-dark);
      border-left: 1px solid var(--card-medium);
      flex-direction: column;
      gap: 0;
      padding: 5rem 1rem 2rem;
      transition: right var(--transition-base);
      overflow-y: auto;
      z-index: 999;
    }

    .nav-links.active {
      right: 0;
    }

    .nav-link {
      padding: 1rem;
      border-bottom: 1px solid var(--card-medium);
      justify-content: flex-start;
    }

    .nav-link:last-child {
      border-bottom: none;
    }

    .nav-divider {
      display: block;
      width: 100%;
      height: 1px;
      background: var(--card-medium);
      margin: 1rem 0;
    }

    .nav-section-label {
      display: block;
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      padding: 1rem;
      border-bottom: 1px solid var(--card-medium);
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .nav-links {
      gap: 1rem;
      font-size: 0.8125rem;
    }
  }
</style>

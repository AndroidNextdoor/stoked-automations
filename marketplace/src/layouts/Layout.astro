---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A curated marketplace of high-quality Claude Code plugins" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

  </head>
  <body>
    <!-- Header Table - Monospace Web Style -->
    <table class="header">
      <tr>
        <td colspan="2" rowspan="2" class="width-auto">
          <h1 class="title">CLAUDE CODE PLUGINS</h1>
          <span class="subtitle">Production-ready plugins for Claude Code CLI</span>
        </td>
        <th>Version</th>
        <td class="width-min">v1.1.0</td>
      </tr>
      <tr>
        <th>Updated</th>
        <td class="width-min"><time>2025-10-11</time></td>
      </tr>
      <tr>
        <th class="width-min">Author</th>
        <td class="width-auto"><a href="https://github.com/jeremylongshore">Jeremy Longshore</a></td>
        <th class="width-min">License</th>
        <td>MIT</td>
      </tr>
    </table>

    <!-- Navigation -->
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="#plugins">Plugins</a></li>
        <li><a href="#packs">Plugin Packs</a></li>
        <li><a href="https://github.com/jeremylongshore/claude-code-plugins">GitHub</a></li>
      </ul>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer>
      <p>Built by the Claude Code community</p>
      <p>
        <a href="https://github.com/jeremylongshore/claude-code-plugins">GitHub</a> |
        <a href="https://discord.com/invite/6PPFFzqPDZ">Discord</a> |
        <a href="https://docs.claude.com/en/docs/claude-code">Docs</a>
      </p>
      <p>&copy; 2025 Claude Code Plugins. Open Source under MIT License.</p>
    </footer>
  </body>
</html>

<style is:global>
  /* Ensure IBM Plex Mono is applied */
  body {
    font-family: 'IBM Plex Mono', monospace;
  }

  /* Table header styling from monospace-web */
  .width-min {
    width: 0%;
    white-space: nowrap;
  }
  .width-auto {
    width: 100%;
  }
</style>
